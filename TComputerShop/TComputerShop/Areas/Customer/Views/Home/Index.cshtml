@model TComputerShop.Models.ViewModels.HomeVM
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />

<h1 class="text-center">Daily Deals</h1>

<div class="row text-center">
    @foreach (var product in Model.Products)
    {
        <div class="containter">
            <div class="col-lg-12">
                <div class="card" style="width: 18rem;">
                        <img src="@product.ImageUrl" class="card-img-top border p-1">
                    <div class="card-body bg-primary">
                        <h5 class="card-title text-white"><a href="">@product.Name</a></h5>
                        <p class="card-text text-white">@product.Description</p>
                        <div class="row">
                            <div class="col-5 text-white">
                            $@product.Price
                            </div>
                            <div class="col-7 text-white">@product.Category.CategoryName</div>
                        </div>
                        <br />
                        <div class="row text-center">
                            
                            <div class="col-12"><a asp-action="Add" asp-controller="Cart" asp-area="Customer" asp-route-id="@product.Id">
                             <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart3" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                             <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                             </svg>
                             Add To Shopping Cart
                             </a></div>
                        </div>
                    </div>
                </div>
            </div>
            <br/>

        </div>
    }
    </div>
