@model TComputerShop.Models.ViewModels.UsersVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form method="post" asp-action="Index" enctype="multipart/form-data">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissable">
                <strong>@TempData["SuccessMessage"]</strong>
            </div>
        }

        <div class="row px-2 mx-2 backgroundWhite border">

            <input type="hidden" asp-for="@Model.User.Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12">

                <h2 class="text-primary text-center">@Model.User.Name's Account</h2>

                <br />

            </div>

            <div class="col-12">

                <div class="form-group row text-center">

                    <div class="col-4">

                        <label asp-for="@Model.User.UserName"></label>

                    </div>

                    <div class="col-6">

                        <input asp-for="@Model.User.UserName" readonly class="form-control" />
                        <span asp-validation-for="@Model.User.UserName" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row text-center">

                    <div class="col-4">

                        <label asp-for="@Model.User.Name"></label>

                    </div>

                    <div class="col-6">

                        <input asp-for="@Model.User.Name" class="form-control" />
                        <span asp-validation-for="@Model.User.Name" class="text-danger"></span>

                    </div>

                </div>

                <div class="form-group row text-center">

                    <div class="col-4">

                        <label asp-for="@Model.User.Email"></label>

                    </div>

                    <div class="col-6">

                        <input asp-for="@Model.User.Email" class="form-control" />
                        <span asp-validation-for="@Model.User.Email" class="text-danger"></span>

                    </div>

                </div>

                <div class="form-group row text-center">

                    <div class="col-4">

                        <label asp-for="@Model.User.City"></label>

                    </div>

                    <div class="col-6">

                        <input asp-for="@Model.User.City" class="form-control" />
                        <span asp-validation-for="@Model.User.City" class="text-danger"></span>

                    </div>

                </div>

                <div class="form-group row text-center">

                    <div class="col-4">

                        <label asp-for="@Model.User.Address"></label>

                    </div>

                    <div class="col-6">

                        <input asp-for="@Model.User.Address" class="form-control" />
                        <span asp-validation-for="@Model.User.Address" class="text-danger"></span>

                    </div>

                </div>

                <div class="form-group row text-center">

                    <div class="col-4">

                        <label asp-for="@Model.User.PostalCode"></label>

                    </div>

                    <div class="col-6">

                        <input asp-for="@Model.User.PostalCode" class="form-control" />
                        <span asp-validation-for="@Model.User.PostalCode" class="text-danger"></span>

                    </div>

                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </div>

            </div>
        </div>
    </form>

