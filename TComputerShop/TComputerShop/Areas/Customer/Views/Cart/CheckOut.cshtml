@model TComputerShop.Models.ViewModels.cartVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form method="post" asp-action="Checkout">

        @if (Model.Items.Count > 0)

        {

            <br />

            <div class="backgroundWhite container">

                <div class="card">

                    <div class="card-header bg-primary text-light ml-0 row container">

                        <div class="col-12 d-none d-md-block col-md-6 pb-1">

                            <i class="fas fa-shopping-cart"></i> &nbsp; Order Summary

                        </div>

                        <div class="col-12 col-md-4 offset-md-2 text-right">

                            <a asp-action="Index" asp-controller="Cart" asp-area="Customer" class="btn btn-outline-info form-control btn-sm">Back To Cart</a>

                        </div>

                    </div>

                    <div class="card-body">

                        <div class="containter rounded p-2">
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="col-12 col-lg-6 pb-4">
                                    <div class="row">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-primary">Pickup Details</span>
                                        </h4>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Name</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Order.Name" id="txtName" type="text" class="form-control" />
                                            <span asp-validation-for="Order.Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Phone</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Order.PhoneNumber" id="txtPhone" type="text" class="form-control" />
                                            <span asp-validation-for="Order.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Address</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Order.Address" type="text" class="form-control" />
                                            <span asp-validation-for="Order.Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>City</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Order.City" type="text" class="form-control" />
                                            <span asp-validation-for="Order.City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Zip Code</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Order.PostalCode" type="text" class="form-control" />
                                            <span asp-validation-for="Order.PostalCode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>Email</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="Order.Email" type="text" class="form-control" />
                                            <span asp-validation-for="Order.Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-lg-5 offset-lg-1">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-primary">Order Summary</span>
                                    </h4>
                                    <ul class="list-group mb-3">
                                        @{ var total = 0.0;
                                            var totalPrice = 0.0;}

                                        @foreach (var item in Model.Items)
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <input type="hidden" asp-for="@item.Product.Id" />
                                                    <h4 class="my-0">@item.Product.Name</h4> (@item.Quantity)
                                                </div>
                                                @{ totalPrice = @item.Product.Price * @item.Quantity;}
                                                <span class="text-muted">$@totalPrice</span>
                                                @{ total += (@item.Product.Price * @item.Quantity);}
                                            </li>
                                        }

                                        <li class="list-group-item d-flex justify-content-between bg-light">
                                            <small class="text-primary">Total (USD)</small>
                                            <strong class="text-primary">$@total</strong>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="card-footer">

                        <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 text-right">

                            <button type="submit" class="btn btn-primary form-control">Place Order</button>

                        </div>

                    </div>

                </div>

            </div>

        }

        else

        {

            <div class="backgroundWhite"> No items added to the shopping cart...</div>

        }

    </form>

