@model TComputerShop.Models.ViewModels.ProdIndexVM 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-2"></div>
    <div class="col-10">
        <a asp-area="Admin" asp-controller="Product" asp-action="Add" class="btn btn-primary text-white form-control" style="width:70%">Add New Product</a>
        <br />
    </div>
</div>
<br/>
<br/>
    @if (Model.Products != null)
    {
        <table class="table table-hover table-bordered p-1">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Category</th>
                    <th scope="col">Image</th>
                    <th scope="col">Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {
                    <tr class="table">
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>$@item.Price</td>
                        <td>@item.Quantity</td>
                        <td>@item.Category.CategoryName</td>
                        <td><img src="@item.ImageUrl" width="40%"/></td>
                        <td>
                            <a asp-area="Admin" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary text-white" style="width:100%">Edit</a>
                            &nbsp;
                            &nbsp;
                            <a asp-action="Delete" asp-area="Admin" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary text-white" style="width:100%">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

